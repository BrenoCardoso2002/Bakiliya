<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:color="@color/black">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/black"
                android:width="3dp"/>
            <corners android:radius="15dp"/>
            <padding android:top="10dp"
                android:right="25dp"
                android:left="25dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/greenConfirm">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/greenConfirm"
                android:width="3dp"/>
            <corners android:radius="15dp"/>
            <padding android:top="10dp"
                android:right="25dp"
                android:left="25dp"
                android:bottom="10dp"/>
        </shape>
</item>

</selector>